{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "types": [
      "react",
      "react-native"
    ],
    "baseUrl": "./",
    "paths": {
      "@": [
        "/"
      ],
      "@store/*": [
        "store/*"
      ],
      "@common-hooks/*": [
        "components/common-hooks/*"
      ],
      "@atoms/*": [
        "components/atoms/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    "pages",
    "index.ts",
    "index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
